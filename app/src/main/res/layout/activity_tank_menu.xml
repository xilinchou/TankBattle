<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tank.TankMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bghud4">

        <RelativeLayout
            android:id="@+id/titleBounds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/tnkExitmenu"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/backstage" />

            <com.gamecentre.tankbattle.tank.TankTextView
                android:id="@+id/tanktype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_toStartOf="@+id/goldCountView">

                    <com.gamecentre.tankbattle.tank.TankTextView
                        android:id="@+id/menuRetryTmrTxt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/brick_brown"
                        android:textSize="7sp" />

                    <ImageView
                        android:id="@+id/gameImg"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:background="@drawable/retry_img" />

                    <com.gamecentre.tankbattle.tank.TankTextView
                        android:id="@+id/retryTxt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="8sp" />


                </LinearLayout>

<!--            </RelativeLayout>-->

            <LinearLayout
                android:id="@+id/goldCountView"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/adCoinView">

                <com.gamecentre.tankbattle.tank.TankTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/gold_stack3" />

                <com.gamecentre.tankbattle.tank.TankTextView
                    android:id="@+id/goldCountTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/adCoinView"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_toStartOf="@+id/shopView">

                <com.gamecentre.tankbattle.tank.TankTextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/coin" />

                <com.gamecentre.tankbattle.tank.TankTextView
                    android:id="@+id/adCoinTxt"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/shopView"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true">

<!--                <tankbattleank.TankTextView-->

<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="0dp"-->
<!--                    android:layout_weight="1"/>-->

                <ImageView
                    android:id="@+id/shop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="2"
                    android:background="@drawable/shop2" />

            </LinearLayout>

        </RelativeLayout>




        <ImageView
            android:id="@+id/inviteBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/PStatus"
            android:layout_alignBottom="@+id/PStatus"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="38dp"
            android:layout_toEndOf="@+id/PStatus"
            android:background="@drawable/tnk_invite" />

        <com.gamecentre.tankbattle.tank.TankTextView
            android:id="@+id/ivName"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/inviteBtn"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/inviteBtn"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/invite_def_txt"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/PStatus"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.gamecentre.tankbattle.tank.TankTextView
                android:id="@+id/tnkP1menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1 Player"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.gamecentre.tankbattle.tank.TankTextView
                android:id="@+id/tnkP2menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2 Players"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />


            <com.gamecentre.tankbattle.tank.TankTextView
                android:id="@+id/tnkConstmenu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Construction"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--        <Button-->
        <!--            android:id="@+id/settingsBtn"-->
        <!--            android:layout_width="50dp"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:layout_marginEnd="45dp"-->
        <!--            android:layout_marginBottom="45dp"-->
        <!--            android:background="@drawable/settings2" />-->

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>
    </RelativeLayout>
</RelativeLayout>